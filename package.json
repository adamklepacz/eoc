{
  "name": "react-full-stack",
  "version": "1.0.0",
  "description": "React, Node.js, Express, MongoDB and Webpack.",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "docker:build:client": "docker build src/client",
    "docker:build:server": "docker build src/server",
    "start": "npm run build && node src/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "eslint -c .eslintrc \"src/**/*.js\" --fix",
    "prettier": "prettier --config .prettierrc --write src/**/*.js && prettier --config .prettierrc --write src/**/*.css"
  },
  "author": "Sandstream Development",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "express": "4.16.3",
    "mongodb": "^3.1.10",
    "mongoose": "5.3.13",
    "react": "16.5.2",
    "react-dom": "16.5.2"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "babel-eslint": "10.0.0",
    "babel-loader": "8.0.0",
    "clean-webpack-plugin": "0.1.19",
    "concurrently": "4.0.0",
    "css-loader": "1.0.0",
    "eslint": "5.9.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "file-loader": "2.0.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "nodemon": "1.17.3",
    "prettier": "1.15.2",
    "style-loader": "0.23.0",
    "url-loader": "1.0.1",
    "webpack": "4.5.0",
    "webpack-cli": "3.0.8",
    "webpack-dev-server": "3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css,md}": [
        "prettier --write",
        "git add"
      ],
      "*.js": [
        "eslint -c .eslintrc --fix",
        "echo test",
        "git add"
      ]
    }
  }
}
